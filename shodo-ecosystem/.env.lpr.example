# LPR System Configuration Example
# Copy this file to .env and configure for your environment

# ===== LPR Core Settings =====
LPR_ENABLED=true
LPR_VERSION=1.0.0
LPR_DEFAULT_TTL=3600          # Default token TTL in seconds (1 hour)
LPR_MAX_TTL=86400             # Maximum token TTL in seconds (24 hours)
LPR_MIN_TTL=300               # Minimum token TTL in seconds (5 minutes)

# ===== Security Keys =====
# Generate with: openssl rand -base64 32
LPR_SIGNING_KEY=your-signing-key-here-change-in-production
LPR_ENCRYPTION_KEY=your-encryption-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# ===== Playwright Configuration =====
PLAYWRIGHT_HEADLESS=false     # Set to true for production
PLAYWRIGHT_TIMEOUT=120         # Login detection timeout in seconds
PLAYWRIGHT_BROWSER=chromium    # chromium, firefox, webkit
PLAYWRIGHT_VIEWPORT_WIDTH=1280
PLAYWRIGHT_VIEWPORT_HEIGHT=720

# ===== Database Configuration =====
DATABASE_URL=postgresql://shodo:shodo_pass@localhost:5432/shodo
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# ===== Redis Configuration =====
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_POOL_SIZE=10
REDIS_TTL=86400               # Default TTL for cached data

# ===== Rate Limiting =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_SECOND=1.0
RATE_LIMIT_BURST=10
RATE_LIMIT_WINDOW=60          # Window size in seconds

# ===== Audit Logging =====
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=INFO          # DEBUG, INFO, WARNING, ERROR, CRITICAL
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_LOG_MAX_ENTRIES=1000000
AUDIT_HASH_CHAIN_ENABLED=true
AUDIT_SIGNATURE_ENABLED=true

# ===== Device Fingerprinting =====
DEVICE_FINGERPRINT_ENABLED=true
DEVICE_FINGERPRINT_STRICT=false  # Strict mode requires exact match
DEVICE_TRUST_SCORE_THRESHOLD=0.7
DEVICE_FINGERPRINT_TTL=604800    # 7 days

# ===== CORS Settings =====
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ===== API Settings =====
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true               # Auto-reload on code changes (dev only)
API_DEBUG=true                # Debug mode (dev only)
API_WORKERS=4                 # Number of worker processes

# ===== Monitoring =====
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=false
TRACING_ENDPOINT=http://localhost:14268/api/traces

# ===== External Services =====
# Add service-specific configurations here
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=

# ===== Development Settings =====
DEV_MODE=true
DEV_BYPASS_AUTH=false        # DANGEROUS: Bypass authentication (dev only)
DEV_MOCK_SERVICES=false      # Use mock services instead of real ones
DEV_VERBOSE_LOGGING=true

# ===== Production Settings =====
# Uncomment for production
# LPR_ENABLED=true
# PLAYWRIGHT_HEADLESS=true
# API_DEBUG=false
# API_RELOAD=false
# DEV_MODE=false
# DEV_BYPASS_AUTH=false
# DEV_MOCK_SERVICES=false
# DEV_VERBOSE_LOGGING=false