# Shodo Ecosystem 環境設定
# 開発環境用設定

# LLM設定（モックモード）
LLM_PROVIDER=mock
OPENAI_BASE_URL=http://localhost:8001/v1
OLLAMA_MODEL=mistral

# API設定
API_PORT=8000
FRONTEND_PORT=3000
VLLM_PORT=8001

# データベース設定（開発用）
DATABASE_URL=postgresql://shodo:shodo_pass@localhost:5432/shodo
REDIS_URL=redis://localhost:6379

# セキュリティ設定（開発環境用）
JWT_SECRET_KEY=dev-secret-key-change-in-production
NODE_ENV=development

# CORS設定
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ログ設定
LOG_LEVEL=info

# 開発モード設定
DEBUG=true
HOT_RELOAD=true