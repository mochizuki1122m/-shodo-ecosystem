# ===== Application =====
APP_NAME=Shodo Ecosystem
APP_VERSION=5.0.0
ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ===== Security =====
SECRET_KEY=change-me
JWT_SECRET_KEY=change-me
JWT_ALGORITHM=RS256
JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----
JWT_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----
JWT_AUDIENCE=shodo-ecosystem
JWT_ISSUER=shodo-auth
JWT_EXPIRATION_HOURS=1
ENCRYPTION_KEY=change-me

# ===== CORS / Hosts =====
CORS_ORIGINS=https://app.example.com,https://admin.example.com
TRUSTED_HOSTS=app.example.com,admin.example.com

# ===== Database =====
DATABASE_URL=postgresql+asyncpg://shodo:shodo_pass@postgres:5432/shodo
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ===== Redis =====
REDIS_URL=redis://redis:6379
REDIS_POOL_SIZE=10
REDIS_DECODE_RESPONSES=true

# ===== AI Inference =====
VLLM_URL=http://vllm:8001
VLLM_TIMEOUT=30
VLLM_RETRY_COUNT=3
MODEL_NAME=openai/gpt-oss-20b
INFERENCE_ENGINE=vllm

# ===== Rate Limit =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ===== SLO Targets =====
SLO_AVAILABILITY_TARGET=99.9
SLO_LATENCY_P95_MS=300
SLO_ERROR_RATE_PERCENT=1.0

# ===== Logging =====
LOG_LEVEL=INFO

# ===== External Services (optional) =====
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
STRIPE_API_KEY=
GMAIL_API_KEY=
SLACK_API_KEY=