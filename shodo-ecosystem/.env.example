# Shodo Ecosystem Environment Variables

# AI設定
VLLM_MODEL=openai/gpt-oss-20b
VLLM_QUANTIZATION=awq
VLLM_GPU_MEMORY_UTILIZATION=0.95
VLLM_MAX_MODEL_LEN=128000
VLLM_TENSOR_PARALLEL_SIZE=1

# データベース
DATABASE_URL=postgresql://shodo:shodo_pass@postgres:5432/shodo
REDIS_URL=redis://redis:6379

# セキュリティ
JWT_SECRET_KEY=change-this-secret-key-in-production
TPM_DEVICE_PATH=/dev/tpm0
ENCRYPTION_KEY=change-this-encryption-key-in-production

# サービス設定
API_PORT=8000
VLLM_PORT=8001
FRONTEND_PORT=3000

# 監査
AUDIT_LOG_PATH=/var/log/shodo/audit
AUDIT_RETENTION_DAYS=90

# レート制限
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# 開発設定
DEBUG=true
NODE_ENV=development
REACT_APP_API_URL=http://localhost:8000