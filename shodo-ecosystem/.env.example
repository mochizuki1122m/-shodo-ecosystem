# Shodo Ecosystem 環境変数設定
# このファイルを .env にコピーして使用してください
# cp .env.example .env

# 環境設定
ENVIRONMENT=development  # development | staging | production

# データベース設定
POSTGRES_DB=shodo
POSTGRES_USER=shodo
POSTGRES_PASSWORD=change_this_password_in_production
DATABASE_URL=postgresql://shodo:change_this_password_in_production@postgres:5432/shodo

# Redis設定
REDIS_URL=redis://redis:6379

# JWT設定
JWT_SECRET_KEY=change_this_secret_key_in_production_use_long_random_string
JWT_EXPIRATION_HOURS=24

# 暗号化キー
ENCRYPTION_KEY=change_this_encryption_key_in_production_use_fernet_key

# CORS設定
ALLOWED_ORIGINS=http://localhost:3000,http://localhost

# AI/LLM設定
MODEL_NAME=openai/gpt-oss-20b
QUANTIZATION=awq
GPU_MEMORY_UTILIZATION=0.95
MAX_MODEL_LEN=128000
VLLM_TIMEOUT=60
VLLM_MAX_RETRIES=3

# レート制限
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ログ設定
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FORMAT=json  # json | text

# フロントエンド設定
REACT_APP_API_URL=http://localhost/api
REACT_APP_WS_URL=ws://localhost/ws
REACT_APP_ENVIRONMENT=development

# セキュリティ設定
MAX_CONTENT_LENGTH=10485760  # 10MB
MAX_TOKEN_LENGTH=4096
MAX_PROMPT_LENGTH=2048

